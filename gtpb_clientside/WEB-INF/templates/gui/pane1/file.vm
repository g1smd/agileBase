#parse("gui/pane1/heading.vm")
#if($relatedRowId)
  #set($rowIdUse = $relatedRowId)
#else
  #set($rowIdUse = $rowId)
#end
#set($downloadBase = "uploads/$field.getTableContainingField().getInternalTableName()/$field.getInternalFieldName()/$rowIdUse/")
#set($downloadUrl = $viewTools.escapeForURL("$downloadBase$fieldValueObject"))
## Image
#if($fieldValueObject.isImage())
  <div class="appelement image $field.getAttachmentType().name().toLowerCase()">
    <a class="download" href="AppController.servlet?return=gui/resources/image&set_custom_string=true&key=img_src&value=$downloadUrl" target="_blank">
      <img src="$downloadUrl.500.$fieldValueObject.getExtension()" />
    </a>
  </div>
#elseif($field.getAttachmentType() == "PROFILE_PHOTO")
  <div class="appelement image profile_photo">
    <img src="resources/icons/file_placeholders/profile_photo.png"/>
  </div>
#elseif($downloadUrl.endsWith("pdf"))
  #set($previewUrl = "$downloadUrl.500.png?cachebust=$viewTools.getRandomString()")
  <div class="appelement image pdf">
    <a href="$downloadUrl" class="download" target="_blank"><img src="$previewUrl" /></a>
  </div>
#elseif($fieldValue != "")
 <a href="$downloadUrl" class="download" target="_blank"><img border="0" style="float:left" src="resources/icons/filetypes/${fieldValueObject.getIconName()}.png"/> $fieldValue</a>
#end
