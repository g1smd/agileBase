## 'Widget' type space that the current app related content can go in
#set($table = $sessionData.getTable())
#set($rowId = $sessionData.getCustomInteger("preview_row_id"))
#set($tableDataRow = $view.getTableDataRow($table, $rowId))
#foreach($field in $table.getFields())
  #set($fieldValueObject = $tableDataRow.get($field))
  #set($fieldValue = $fieldValueObject.toString().trim())
  #if($fieldValue != "")
    #set($category = $field.getFieldCategory().toString().toLowerCase())
    #if(($category == "text") || ($category == "file") || ($category == "referenced_report_data"))
      #parse("gui/pane1/${category}.vm")
    #end
  #end
  ## Comments
  #set($comments = $view.getComments($field, $rowId))
  #if ($comments.size() > 0)
    <div class="appelement comments">
	#foreach($comment in $comments)
	  <div class="comment">
	    <span class="comment_text">$comment.getText()</span> <span class="comment_attribution">- $comment.getAuthor(), $comment.getTimestampString()</span>
      </div>
	#end
	</div>
  #end
#end
## Related data
#set($report = $sessionData.getReport())
#foreach($reportField in $report.getReportFields())
  #set($field = $reportField.getBaseField())
  #if($field.isPrimaryKey())
    #set($reportFieldTable = $field.getTableContainingField())
 	  #if(!$reportFieldTable.equals($table))
        #set($relatedRowIds = $view.getRelatedRowIds($sessionRowId, $reportFieldTable))
        #if($relatedRowIds.size() > 0)
          ## We've got to here, there is related data
          ## Heading for the related data
          #foreach($entry in $tableDataRow.entrySet())
            <i>$entry.getKey() - $entry.getKey().getRelatedTable()</i><br>
            #if($entry.getKey().getRelatedTable().equals($reportFieldTable))
              <b>$entry.getValue()</b><br>
            #end
          #end
        #end
      #end
  #end
#end