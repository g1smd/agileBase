<!doctype html>
<html>
<head>
  
  <script language="JavaScript" src="resources/jquery.js"></script>
  <script language="JavaScript">
    $(document).ready(function() {
    $(".card").click(function() {
      if($(this).closest(".container").hasClass("zoomed")) {
        $(this).addClass("flipped");
      } else {
        var img = $(this).find("img.image");
        img.attr("src", img.attr("data-bigsrc"));
        $(this).closest(".container").addClass("zoomed");
      }
    });
    });
  </script>
  
    <style>
    
    body {
      background-color: #EEF3F9;
    }
    
    figure {
      margin: 0;
    }
    
    .container {
      display: block;
      float: left;
      width: 1000px;
      height: 1414px;
      -webkit-transform: scale(0.2);
      -moz-transform: scale(0.2);      
      margin: -350px;
      border: 2px solid #cccccc;
      -webkit-perspective: 800px;
         -moz-perspective: 800px;
           -o-perspective: 800px;
              perspective: 800px;
    }
    
    .container:hover {
      transform: scale(0.3);
      -webkit-transform: scale(0.3);
      -moz-transform: scale(0.3);
    }

    .card {
      width: 100%;
      height: 100%;
      -webkit-transition: -webkit-transform 1s;
         -moz-transition: -moz-transform 1s;
           -o-transition: -o-transform 1s;
              transition: transform 1s;
      -webkit-transform-style: preserve-3d;
         -moz-transform-style: preserve-3d;
           -o-transform-style: preserve-3d;
              transform-style: preserve-3d;
      -webkit-perspective-origin: 50% 50%;
      -moz-perspective-origin: 50% 50%;
      -o-perspective-origin: 50% 50%;
      perspective-origin: 50% 50%;
    }

    .card.flipped {
      -webkit-transform: rotateY( 180deg );
         -moz-transform: rotateY( 180deg );
           -o-transform: rotateY( 180deg );
              transform: rotateY( 180deg );
    }
    
    .container.zoomed {
      transform: scale(1);
      -webkit-transform: scale(1);
      -moz-transform: scale(1);
      z-index: 10;
    }

    .card figure {
      display: block;
      height: 100%;
      width: 100%;
      line-height: 260px;
      color: white;
      text-align: center;
      font-weight: bold;
      font-size: 140px;
      position: absolute;
      -webkit-backface-visibility: hidden;
         -moz-backface-visibility: hidden;
           -o-backface-visibility: hidden;
              backface-visibility: hidden;
    }

    .card .front {
    }

    .card .back {
      background: blue;
      -webkit-transform: rotateY( 180deg );
         -moz-transform: rotateY( 180deg );
           -o-transform: rotateY( 180deg );
              transform: rotateY( 180deg );
    }
    
    .image {
      width: 100%;
    }
  </style>

</head>
<body>

    #parse("gui/preview/app_presenter.vm")

  <section id="options">
    <p><button id="flip">Flip Card</button></p>
  </section>

</body>
</html>
