<!doctype html>
<html>
<head>
  
  <script language="JavaScript" src="resources/jquery.js"></script>
  <script language="JavaScript">
    $(document).ready(function() {
    $(".card").click(function() {
      var container = $(this).closest(".container");
      console.log(container.position().left + ", " + container.position().top);
      if(container.hasClass("zoomed")) {
        $(this).toggleClass("flipped");
      } else {
        if (container.position().left < 400) {
          container.css("left","400px");
        }
        var img = $(this).find("img.image");
        img.attr("src", img.attr("data-bigsrc"));
        container.addClass("zoomed");
      }
    });
    });
  </script>
  
    <style>
    
    body {
      background-color: #EEF3F9;
    }
    
    figure {
      margin: 0;
    }
    
    .container {
      position: relative;
      z-index: 0;
      display: block;
      float: left;
      left: 0;
      top: 0;
      width: 1000px;
      height: 1414px;
      -webkit-transform: scale(0.2);
      -moz-transform: scale(0.2);      
      margin: -350px;
      -webkit-perspective: 1500px;
         -moz-perspective: 1500px;
           -o-perspective: 1500px;
              perspective: 1500px;
      -webkit-transition-duration: 2s;
      -moz-transition-duration: 2s;
      transition-duration: 2s;
      -moz-transition-timing-function: ease-out;
      -webkit-transition-timing-function: ease-out;
      transition-timing-function: ease-out;
    }
    
    .container:hover {
      transform: scale(0.3);
      -webkit-transform: scale(0.3);
      -moz-transform: scale(0.3);
    }

    .card {
      width: 100%;
      height: 100%;
      -webkit-transition: -webkit-transform 1s;
         -moz-transition: -moz-transform 1s;
           -o-transition: -o-transform 1s;
              transition: transform 1s;
      -webkit-transform-style: preserve-3d;
         -moz-transform-style: preserve-3d;
           -o-transform-style: preserve-3d;
              transform-style: preserve-3d;
      -webkit-perspective-origin: 50% 50%;
      -moz-perspective-origin: 50% 50%;
      -o-perspective-origin: 50% 50%;
      perspective-origin: 50% 50%;
    }

    .card.flipped {
      -webkit-transform: rotateY( 180deg );
         -moz-transform: rotateY( 180deg );
           -o-transform: rotateY( 180deg );
              transform: rotateY( 180deg );
    }
    
    .container.zoomed {
      transform: scale(1);
      -webkit-transform: scale(1);
      -moz-transform: scale(1);
      z-index: 10;
    }

    .card figure {
      border: 2px solid #cccccc;
      border-radius: 1em;
      display: block;
      height: 100%;
      width: 100%;
      color: white;
      text-align: center;
      font-weight: bold;
      position: absolute;
      -webkit-backface-visibility: hidden;
         -moz-backface-visibility: hidden;
           -o-backface-visibility: hidden;
              backface-visibility: hidden;
    }

    .card .front {
    }

    .card .back {
      background-color: gray;
      color: white;
      font-family: Verdana, sans-serif;
      font-size: 20pt;
      -webkit-transform: rotateY( 180deg );
         -moz-transform: rotateY( 180deg );
           -o-transform: rotateY( 180deg );
              transform: rotateY( 180deg );
    }
    
    .fieldcontent {
      padding: 1em;
      border: 2px solid #ff8040;
      background-color: #DDE6EF;
      border-radius: 1em;
      margin: 1em;
      color: black;
    }
    
    .image {
      width: 100%;
    }
  </style>

</head>
<body>

    #parse("gui/preview/app_presenter.vm")

  <section id="options">
    <p><button id="flip">Flip Card</button></p>
  </section>

</body>
</html>
