#set($module = $sessionData.getModule())
#if($module)
<table cellspacing=0 border=0 cellpadding=0>
  <tr>
    <td>Name:</td>
    <td>
      <input type="text" name="modulename" gtpb_update_module value="$module" onkeyup="top.oBuffer.writeBuffer(this);" maxKeyCount="6" identifier="$module.getInternalModuleName()">
    </td>
  </tr>
  <tr>
    <td>Section:</td>
    <td>
      <input type="text" name="section" gtpb_update_module value="$module.getSection()" onkeyup="top.oBuffer.writeBuffer(this);" maxKeyCount="6" identifier="$module.getInternalModuleName()">
    </td>
  </tr>
  <tr>
    <td>Index:<br><i>Modules with lower index numbers will appear before those with higher</i></td>
    <td>
      <input type="text" name="indexnumber" gtpb_update_module value="$module.getIndexNumber()" onkeyup="top.oBuffer.writeBuffer(this);" maxKeyCount="6" identifier="$module.getInternalModuleName()">
    </td>
  </tr>
  <tr>
    <td>app template:<br><i>Rather than load agileBase, you can load a custom app when this module is selected</i></td>
    <td>
      <select name="apptemplate" onchange="new fChange(this);" gtpb_update_module="true" identifier="$module.getInternalModuleName()">
        <option value="">-- no app template--</option>
        #set($currentAppTemplate = $module.getAppTemplate())
        #set($appTemplates = $viewTools.listFiles("WEB-INF/templates/gui/apps"))
        #foreach($appTemplate in $appTemplates)
          #set($possibleAppTemplate = "gui/apps/$appTemplate.getName()")
          #set($possibleAppTemplate = $possibleAppTemplate.replace(".vm",""))
          <option #if($possibleAppTemplate.equals($currentAppTemplate)) selected #end value="$possibleAppTemplate">$appTemplate.getName().replace(".vm","").replace("_"," ")</option>
        #end
      </select>
    </td>
  </tr>
</table>
#else
	Please press the 'New' button in the toolbar to create a new module
#end