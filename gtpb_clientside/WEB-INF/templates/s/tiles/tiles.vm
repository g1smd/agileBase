#set($user = $view.getLoggedInUser())
#set($tiles = $user.getTiles())
#foreach($tile in $tiles)
  #set($tileType = $tile.getTileType())
  #set($colour = $tile.getColour())
  <div class="tile $colour #if($tileType.isLarge()) large #end" data-colour="$colour" data-type="$tileType.toString().toLowerCase()" data-internaltilename="$tile.getInternalTileName()">
    #set($template = $viewTools.cleanString($tileType.toString()))
    <div class="content">
      #parse("s/tiles/${template}.vm")
    </div>
  </div>
#end
<div class="tile adder blue" data-colour="blue" title="add new app" data-type="adder">
  <div class="icon">+</div>
  <div class="content"></div>
</div>
<div class="sideAction backHome" title="home"><i class="icon-chevron-left"></i></div>
<div class="sideAction removeTile" title="remove tile"><i class="icon-remove-sign"></i></div>
